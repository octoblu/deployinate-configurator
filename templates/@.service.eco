[Unit]
Description=<%= @namespace %>-<%= @project_name %>-<%= @color %>
Wants=vulcand.service
After=vulcand.service

[Service]
TimeoutStartSec=300
Restart=always
<% if private: %>
ExecStartPre=/bin/sh -c '/usr/bin/docker login \
  --username $(/usr/bin/etcdctl get /docker/quay.io/username) \
  --password $(/usr/bin/etcdctl get /docker/quay.io/password) \
  --email $(/usr/bin/etcdctl get /docker/quay.io/email) \
  quay.io'
<% end %>
ExecStartPre=/usr/bin/etcdctl get /<%= @namespace %>/<%= @project_name %>/<%= @color %>/port || /usr/bin/echo "etcd did not contain /<%= @namespace %>/<%= @project_name %>/<%= @color %>/port" && exit 1
ExecStartPre=/usr/bin/etcdctl get /<%= @namespace %>/<%= @project_name %>/<%= @color %>/docker_url || /usr/bin/echo "etcd did not contain /<%= @namespace %>/<%= @project_name %>/<%= @color %>/docker_url" && exit 1
ExecStartPre=-/usr/bin/docker rm --force <%= @namespace %>-<%= @project_name %>-<%= @color %>-env-%i <%= @namespace %>-<%= @project_name %>-<%= @color %>-%i
ExecStartPre=/bin/sh -c "/usr/bin/docker run --rm \
  --name <%= @namespace %>-<%= @project_name %>-<%= @color %>-env-%i \
  -e ETCDCTL_PEERS=http://$(ifconfig docker0 | grep 'inet ' | awk '{print $2}'):2379 \
  quay.io/octoblu/etcd-to-env /<%= @namespace %>/<%= @project_name %>/env > /tmp/<%= @namespace %>-<%= @project_name %>-<%= @color %>.env \
"
ExecStart=/bin/sh -c "/usr/bin/docker run --rm \
  --name <%= @namespace %>-<%= @project_name %>-<%= @color %>-%i \
  --env-file /tmp/<%= @namespace %>-<%= @project_name %>-<%= @color %>.env \
  --memory 512m \
  -p $(/usr/bin/etcdctl get /<%= @namespace %>/<%= @project_name %>/<%= @color %>/port):80 \
  $(/usr/bin/etcdctl get /<%= @namespace %>/<%= @project_name %>/<%= @color %>/docker_url) \
"
ExecStop=/usr/bin/docker stop --time=5 <%= @namespace %>-<%= @project_name %>-<%= @color %>-%i

[Install]
WantedBy=multi-user.target

[X-Fleet]
Conflicts=<%= @namespace %>-<%= @project_name %>-<%= @color %>@*.service
MachineMetadata=Services=true
